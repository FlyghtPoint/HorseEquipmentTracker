{% extends 'admin/base.html.twig' %}

{% block title %}Modifier l'équipement{% endblock %}

{% block body %}
    <div class="p-4 sm:p-6 lg:p-8">
        <div class="sm:flex sm:items-center">
            <div class="sm:flex-auto">
                <h1 class="text-2xl font-semibold text-gray-900">Modifier l'équipement</h1>
                <p class="mt-2 text-sm text-gray-700">Modifier les informations de l'équipement</p>
            </div>
        </div>

        <div class="mt-8">
            <form method="post" class="space-y-6">
                <div class="space-y-6 bg-white px-4 py-5 sm:p-6">
                    {# Nom #}
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700">Nom</label>
                        <div class="mt-1">
                            <input type="text" name="name" id="name" required
                                   value="{{ equipment.name }}"
                                   class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                        </div>
                    </div>

                    {# Description #}
                    <div>
                        <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
                        <div class="mt-1">
                            <textarea id="description" name="description" rows="3"
                                    class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">{{ equipment.description }}</textarea>
                        </div>
                    </div>

                    {# Catégorie #}
                    <div>
                        <label for="category" class="block text-sm font-medium text-gray-700">Catégorie</label>
                        <div class="mt-1">
                            <select id="category" name="category_id" required
                                    class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                                {% for category in categories %}
                                    <option value="{{ category.id }}" 
                                            {% if category.id == equipment.category.id %}selected{% endif %}>
                                        {{ category.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    {# État #}
                    <div>
                        <label for="condition" class="block text-sm font-medium text-gray-700">État</label>
                        <div class="mt-1">
                            <select id="condition" name="condition_id" required
                                    class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                                {% for condition in conditions %}
                                    <option value="{{ condition.id }}"
                                            {% if condition.id == equipment.condition.id %}selected{% endif %}>
                                        {{ condition.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    {# Emplacement #}
                    <div>
                        <label for="location" class="block text-sm font-medium text-gray-700">Emplacement</label>
                        <div class="mt-1">
                            <select id="location" name="location_id" required
                                    class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                                {% for location in locations %}
                                    <option value="{{ location.id }}"
                                            {% if location.id == equipment.location.id %}selected{% endif %}>
                                        Allée {{ location.aisle }} - Étagère {{ location.shelf_number }}
                                    </option>
                                {% endfor