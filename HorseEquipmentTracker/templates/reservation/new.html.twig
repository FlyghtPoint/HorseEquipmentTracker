{% extends 'base.html.twig' %}

{% block title %}Nouvelle Réservation{% endblock %}

{% block body %}
    <div class="bg-white shadow sm:rounded-lg max-w-3xl mx-auto mt-6">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Réserver {{ equipment.name }}</h3>
            
            <form action="{{ path('app_reservation_create') }}" method="post" class="mt-5">
                <input type="hidden" name="equipment_id" value="{{ equipment.id }}">
                
                <div class="space-y-4">
                    <div>
                        <label for="start_date" class="block text-sm font-medium text-gray-700">Date de début</label>
                        <input type="datetime-local" name="start_date" id="start_date" required 
                               class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500">
                    </div>

                    <div>
                        <label for="end_date" class="block text-sm font-medium text-gray-700">Date de fin</label>
                        <input type="datetime-local" name="end_date" id="end_date" required 
                               class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500">
                    </div>

                    <div class="flex justify-end">
                        <button type="submit" class="inline-flex items-center rounded-md bg-primary-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary-700">
                            Confirmer la réservation
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}